<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Tree</th>
    <th>Path</th>
    <th>Type</th>
    <th>Prj</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.tree %></td>
    <td><%= node.path %></td>
    <td><%= node.type %></td>
    <td><%= node.prj %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

